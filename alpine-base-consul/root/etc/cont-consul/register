#!/usr/bin/with-contenv sh

if [ -d /etc/cont-consul/services.d/ ]; then
    for file in /etc/cont-consul/services.d/*.json; do
        [ -f $file ] || continue

        curl -sSL -X PUT -d "@${file}" "http://${CONSUL_ADDRESS}/v1/agent/service/register"
    done
fi

if [ -d /etc/cont-consul/checks.d/ ]; then
    for file in /etc/cont-consul/checks.d/*.json; do
        [ -f $file ] || continue

        curl -sSL -X PUT -d "@${file}" "http://${CONSUL_ADDRESS}/v1/agent/check/register"
    done
fi
